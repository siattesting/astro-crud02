---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
const data = Astro.locals
const currentUser = data.user
---

<header transition:animate="none">
	<h2>
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		{currentUser && <HeaderLink href="/transactions">Transactions</HeaderLink>}
		<HeaderLink href="/about">About</HeaderLink>
		{!currentUser && <HeaderLink href="/auth/signup">Signup</HeaderLink>}
		{!currentUser && <HeaderLink href="/auth/login">Login</HeaderLink>}
		{currentUser && <HeaderLink href="/auth/profile">Profile</HeaderLink>}
		<!-- <HeaderLink href="https://twitter.com/astrodotbuild" target="_blank">Twitter</HeaderLink>
		<HeaderLink href="https://github.com/withastro/astro" target="_blank">GitHub</HeaderLink> -->
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>